<UserControl x:Class="XERP.MainPage" 
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    mc:Ignorable="d"
    d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <sdk:HierarchicalDataTemplate x:Key="MenuTemplate" ItemsSource="{Binding Children}" >
            <TextBlock Text="{Binding MenuItemID}" />
        </sdk:HierarchicalDataTemplate>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" ShowGridLines="True" Background="White" Height="Auto" Width="Auto">
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <sdk:GridSplitter Grid.Row="0" Grid.Column="1" VerticalAlignment="Stretch" 
                          HorizontalAlignment="Center" 
                          Background="#FFCEC9C9" Width="5"/>
        <sdk:TreeView Height="Auto" HorizontalAlignment="Stretch" Name="tv" VerticalAlignment="Stretch"
                       Width="Auto" ItemTemplate="{StaticResource MenuTemplate}" 
                      SelectedItemChanged="tv_SelectedItemChanged" 
                      ItemsSource="{Binding NestedMenuList}">
            
        </sdk:TreeView>

        
            <TextBox 
                Grid.Column="2" Height="23" HorizontalAlignment="Left" 
                 Margin="218,117,0,0" Name="txt" VerticalAlignment="Top" Width="120" 
                 Text="{Binding Source=SelectedMenuItem, Path=MenuItemID, Mode=TwoWay}"  
                 
                 />
        

        
    </Grid>
    

</UserControl>
